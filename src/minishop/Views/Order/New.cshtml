@model minishop.Controllers.DTOs.ViewModels.OrderCreateViewModel
@{
    ViewData["Title"] = "New";
}

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Check Out</h2>
        </div>
        <div>
        </div>
    </div>
    @foreach (var item in Model.ShoppingCartItems)
    {
        <div class="card mb-3" id="cartItem-@item.ProductId">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div>
                            @* img *@
                        </div>
                        <div class="ms-3">
                            <h5>@item.ProductName</h5>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center">
                        <div style="width: 50px;">
                            <h5 class="fw-normal mb-0">@item.Quantity</h5>
                        </div>
                        <div style="width: 80px;">
                            <h5 class="mb-0">$@item.Price</h5>
                        </div>
                        <div>
                            <h5 class="mb-0">$@item.SubTotal</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <h3>Amount $@Model.Amount</h3>
</div>

<form asp-controller="Order" asp-action="Checkout" method="post" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Order Name</label>
        <input type="text" class="form-control" asp-for="Name" required>
        <span asp-validation-for="Name" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="ReceiverName">Receiver Name</label>
        <input type="text" class="form-control" asp-for="ReceiverName" required>
        <span asp-validation-for="ReceiverName" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="ReceiverAddress">Receiver Address</label>
        <input type="text" class="form-control" asp-for="ReceiverAddress" required>
        <span asp-validation-for="ReceiverAddress" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="ReceiverPhone">Receiver Phone</label>
        <input type="tel" class="form-control" asp-for="ReceiverPhone" pattern="^09[0-9]{8}$" required>
        <span asp-validation-for="ReceiverPhone" class="text-red-600"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
