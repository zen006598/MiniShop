@model minishop.Controllers.DTOs.ViewModels.ProductViewModel;
@using minishop.Commons;
@{
    ViewData["Title"] = "Edit";
}
<form asp-controller="Product" asp-action="Update" method="post" asp-route-id="@Model.Id" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price">
        <span asp-validation-for="Price" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity in stock</label>
        <input type="number" class="form-control" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="Status">Product Status</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ProductStatus>()"></select>
        <span asp-validation-for="Status" class="text-red-600"></span>
    </div>

    <div class="form-group">
        <label for="Description">Product Description</label>
        <input type="area" class="form-control" asp-for="Description">
        <span asp-validation-for="Description" class="text-red-600"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>